<Window x:Class="pks.ManageGenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="GenresListBox" DisplayMemberPath="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="150" Margin="10,10,0,0" />

        <Button Content="Редактировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,170,0,0" Click="EditGenreButton_Click"/>
        <Button Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,170,0,0" Click="DeleteGenreButton_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="230,170,0,0" Click="AddGenreButton_Click"/>
    </Grid>
</Window>
